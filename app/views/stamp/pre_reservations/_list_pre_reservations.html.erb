<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <% if pre_reservations.count > 0 %>
            <th colspan="3">Actions</th>
        <% else %>
            <th colspan="3"></th>
        <%end %>
    </tr>
    </thead>

    <tbody>
    <% if pre_reservations.count == 0 %>
        <tr>
            <td colspan="2">You have no pre reservations</td>
            <td colspan="2">
                <%= link_to 'Create a pre reservation', new_service_pre_reservation_path, class:'btn btn-primary btn-xs' %>
            </td>
        </tr>
    <% else %>
        <% pre_reservations.each do |pre_reservation| %>
            <tr>
                <td><%= pre_reservation.customer.try(:name) %></td>

                <td><%= pre_reservation.stamp_service.try(:name) %></td>
                <td><%= pre_reservation.stamp_time_slot.try(:from) %></td>
                <td><%= pre_reservation.stamp_time_slot.try(:units) %></td>
                <td><%= pre_reservation.try(:total_price) %></td>

                <td><%= link_to 'Show', service_pre_reservation_path(pre_reservation.stamp_service, pre_reservation) %></td>
                <td><%= link_to 'Edit', edit_service_pre_reservation_path(pre_reservation.stamp_service, pre_reservation) %></td>
                <td><%#= link_to 'Destroy', pre_reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    <% end %>
    </tbody>
</table>