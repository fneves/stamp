<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <% if reservations.count > 0 %>
            <th colspan="3">Actions</th>
        <% else %>
            <th colspan="3"></th>
        <%end %>
    </tr>
    </thead>

    <tbody>
    <% if reservations.count == 0 %>
        <tr>
            <td colspan="2">You have no reservations</td>
            <td colspan="2">
                <%= link_to 'Create a reservation', new_service_reservation_path, class:'btn btn-primary btn-xs' %>
            </td>
        </tr>
    <% else %>
        <% reservations.each do |reservation| %>
            <tr>
              <td><%= reservation.customer.try(:name) %></td>

              <td><%= reservation.stamp_service.try(:name) %></td>
              <td><%= reservation.stamp_time_slot.try(:from) %></td>
              <td><%= reservation.stamp_time_slot.try(:units) %></td>
              <td><%= reservation.try(:total_price) %></td>
              <td><%= link_to 'Show', service_reservation_path(reservation.stamp_service, reservation) %></td>

              <td><%= link_to 'Edit', edit_service_reservation_path(reservation.stamp_service, reservation) %></td>
                <td><%#= link_to 'Destroy', pre_reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    <% end %>
    </tbody>
</table>
