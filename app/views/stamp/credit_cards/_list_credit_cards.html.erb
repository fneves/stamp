<table class="table table-striped">
    <thead>
    <tr>
        <th>Customer</th>
        <th>Card Number</th>
        <th>Name</th>
        <th>Exp Month</th>
        <th>Exp Year</th>
        <% if credit_cards.count > 0 %>
            <th colspan="3">Actions</th>
        <% else %>
            <th colspan="3"></th>
        <%end %>
    </tr>
    </thead>

    <tbody>
    <% if credit_cards.count == 0 %>
        <tr>
            <td colspan="2">You have no credit cards</td>
            <td colspan="2">
                <%= link_to 'Create a credit card', new_credit_card_path, class:'btn btn-primary btn-xs' %>
            </td>
        </tr>
    <% else %>
        <% credit_cards.each do |credit_card| %>
            <tr>
                <td><%= credit_card.customer_id %></td>
                <td><%= credit_card.card_number %></td>
                <td><%= credit_card.name %></td>
                <td><%= credit_card.exp_date_month %></td>
                <td><%= credit_card.exp_date_year %></td>

                <td><%= link_to 'Show', credit_card %></td>
                <td><%= link_to 'Edit', edit_credit_card_path(credit_card) %></td>
                <td><%= link_to 'Destroy', credit_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    <% end %>
    </tbody>
</table>